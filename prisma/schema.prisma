// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id          String   @id @default(cuid())
  name        String
  address     String
  price       Float
  priceLabel  String?
  image       String
  beds        Int
  baths       Float
  sqft        Int
  status      String
  tags        String[]
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("properties")
}

model Lead {
  id               String    @id @default(cuid())
  name             String
  email            String
  phone            String?
  propertyInterest String
  propertyDetails  String?
  budget           String?
  message          String?
  status           String    @default("New")
  createdAt        DateTime  @default(now())
  contactedAt      DateTime?

  @@map("leads")
}

model BlogPost {
  id           String    @id @default(cuid())
  title        String
  slug         String    @unique
  excerpt      String
  content      String
  author       String
  authorAvatar String?
  image        String?
  category     String
  tags         String[]
  published    Boolean   @default(false)
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("blog_posts")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String
  role         String    @default("admin")
  createdAt    DateTime  @default(now())
  lastLogin    DateTime?

  @@map("users")
}

model Transaction {
  id             String    @id @default(cuid())
  orderId        String    @unique
  amount         Float
  currency       String    @default("USD")
  paymentGateway String
  status         String
  customerEmail  String
  customerName   String?
  propertyId     String?
  reference      String    @unique
  metadata       Json?
  createdAt      DateTime  @default(now())
  completedAt    DateTime?

  @@map("transactions")
}
